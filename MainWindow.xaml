<Window x:Class="TankManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TankManager"
        xmlns:models="clr-namespace:TankManager.Core.Models"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Tank Manager" Height="900" Width="1800"
        AllowDrop="True"
        Drop="FileDropZone_Drop"
        DragEnter="FileDropZone_DragEnter"
        Background="#FFF5F5F5">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:GroupCountToVisibilityConverter x:Key="GroupCountToVisibilityConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:InverseNullToVisibilityConverter x:Key="InverseNullToVisibilityConverter"/>
        <local:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibilityConverter"/>
        <local:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        <local:GroupItemPropertyConverter x:Key="GroupItemPropertyConverter"/>
        <local:MaterialSortTypeConverter x:Key="MaterialSortTypeConverter"/>

        <!-- ObjectDataProvider для MaterialSortType enum -->
        <ObjectDataProvider x:Key="SheetMaterialSortOptions" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:MaterialSortType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <!-- Storyboard для анимации SnackBar -->
        <Storyboard x:Key="ShowSnackbarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SnackbarNotification"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="100" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="SnackbarNotification"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>

        <Storyboard x:Key="HideSnackbarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SnackbarNotification"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           To="100" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="SnackbarNotification"
                           Storyboard.TargetProperty="Opacity"
                           To="0" Duration="0:0:0.2"/>
        </Storyboard>

        <!-- Цветовая палитра -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#FFF5F5F5"/>
        <SolidColorBrush x:Key="BorderColor" Color="#FFE0E0E0"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FF333333"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FF757575"/>
        <SolidColorBrush x:Key="AccentColor" Color="#FF505050"/>
        <SolidColorBrush x:Key="HoverBackground" Color="#FFEEEEEE"/>
        <SolidColorBrush x:Key="SelectedBackground" Color="#FF606060"/>
        <SolidColorBrush x:Key="SelectedForeground" Color="#FFFFFFFF"/>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBackground}"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="PropertyLabel">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,3,8,3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="PropertyValue">
            <Setter Property="Margin" Value="0,3,0,3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        </Style>

        <!-- Стиль для кнопок копирования -->
        <Style x:Key="CopyButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBackground}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопок панели -->
        <Style x:Key="PanelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBackground}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для ComboBox сортировки -->
        <Style x:Key="SortComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Focusable="False"
                                             IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                             ClickMode="Press">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Grid Background="Transparent">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                 Content="{TemplateBinding Content}"
                                                                 Margin="8,4,4,4"
                                                                 HorizontalAlignment="Left"
                                                                 VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1"
                                                          Text="▼"
                                                          FontSize="8"
                                                          Margin="4,4,8,4"
                                                          VerticalAlignment="Center"
                                                          Foreground="{StaticResource TextSecondary}"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                                <ContentPresenter x:Name="ContentSite"
                                                 Content="{TemplateBinding SelectionBoxItem}"
                                                 ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                 ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                 Margin="8,4,24,4"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Center"
                                                 IsHitTestVisible="False"/>
                                <Popup x:Name="Popup"
                                      Placement="Bottom"
                                      IsOpen="{TemplateBinding IsDropDownOpen}"
                                      AllowsTransparency="True"
                                      Focusable="False"
                                      PopupAnimation="Slide">
                                    <Border Background="{StaticResource PrimaryBackground}"
                                           BorderBrush="{StaticResource BorderColor}"
                                           BorderThickness="1"
                                           CornerRadius="3"
                                           Margin="0,2,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="2" Opacity="0.2" BlurRadius="5"/>
                                        </Border.Effect>
                                        <ScrollViewer MaxHeight="200">
                                            <StackPanel IsItemsHost="True"/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBackground}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                        <Setter Property="FontSize" Value="10"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border Background="{TemplateBinding Background}"
                                           Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBackground}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBackground}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Общий шаблон для списка деталей с группировкой -->
        <DataTemplate x:Key="PartItemTemplate">
            <StackPanel Margin="1" Cursor="Hand">
                <TextBlock FontSize="11" FontWeight="SemiBold">
                    <Run Text="{Binding Name, Mode=OneWay}"/>
                    <Run Text=" "/>
                    <Run Text="{Binding Marking, Mode=OneWay}" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"/>
                </TextBlock>
                <TextBlock FontSize="10" Margin="0,2,0,0" Opacity="0.7">
                    <Run Text="{Binding DetailType}"/>
                    <Run Text=" • "/>
                    <Run Text="{Binding Material}"/>
                </TextBlock>
            </StackPanel>
        </DataTemplate>

        <!-- Стиль для элементов списка с хорошей читаемостью при выделении -->
        <Style x:Key="PartListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3"
                                Margin="1">
                            <ContentPresenter TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBackground}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource SelectedBackground}"/>
                    <Setter Property="Foreground" Value="{StaticResource SelectedForeground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для элементов материалов -->
        <Style x:Key="MaterialListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3"
                                Margin="1">
                            <ContentPresenter TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBackground}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource SelectedBackground}"/>
                    <Setter Property="Foreground" Value="{StaticResource SelectedForeground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль группировки -->
        <Style x:Key="GroupedContainerStyle" TargetType="{x:Type GroupItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupItem}">
                        <Border Background="{StaticResource PrimaryBackground}"
                                BorderBrush="{StaticResource BorderColor}" 
                                BorderThickness="1" 
                                CornerRadius="3"
                                Margin="4,3"
                                Padding="8,6">
                            <Grid>
                                <Expander IsExpanded="False"
                                          Visibility="{Binding ItemCount, Converter={StaticResource GroupCountToVisibilityConverter}, ConverterParameter=Multiple}">
                                    <Expander.Header>
                                        <Grid Background="Transparent">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" TextWrapping="Wrap"
                                                               Text="{Binding Converter={StaticResource GroupItemPropertyConverter}, ConverterParameter=Name}"/>
                                                    <TextBlock Text=" " FontSize="11"/>
                                                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"
                                                               Text="{Binding Converter={StaticResource GroupItemPropertyConverter}, ConverterParameter=Marking}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock FontSize="10" Foreground="{StaticResource TextSecondary}"
                                                               Text="{Binding Converter={StaticResource GroupItemPropertyConverter}, ConverterParameter=DetailType}"/>
                                                    <TextBlock Text=" • " FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                                                    <TextBlock FontSize="10" Foreground="{StaticResource TextSecondary}"
                                                               Text="{Binding Converter={StaticResource GroupItemPropertyConverter}, ConverterParameter=Material}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <Border Grid.Column="1" Background="{StaticResource AccentColor}" CornerRadius="8" Padding="6,2" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding ItemCount, StringFormat='{}{0} шт.'}" FontSize="10" FontWeight="SemiBold" Foreground="White"/>
                                            </Border>
                                        </Grid>
                                    </Expander.Header>
                                    <Border Padding="0,4,0,0" Margin="12,0,0,0">
                                        <ItemsPresenter/>
                                    </Border>
                                </Expander>

                                <ItemsPresenter Visibility="{Binding ItemCount, Converter={StaticResource GroupCountToVisibilityConverter}, ConverterParameter=Single}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель инструментов -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="8,6">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Button Command="{Binding ToggleProductsPanelCommand}"
                            Style="{StaticResource PanelButtonStyle}"
                            ToolTip="Список сохранённых изделий">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋" Margin="0,0,5,0"/>
                            <TextBlock Text="Изделия"/>
                        </StackPanel>
                    </Button>

                    <Rectangle Width="1" Fill="{StaticResource BorderColor}" Margin="8,2"/>

                    <Button x:Name="LoadDocumentButton" 
                            Click="LoadDocumentButton_Click"
                            Style="{StaticResource PanelButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📂" Margin="0,0,5,0"/>
                            <TextBlock Text="Загрузить"/>
                        </StackPanel>
                    </Button>

                    <Rectangle Width="1" Fill="{StaticResource BorderColor}" Margin="8,2"/>

                    <Button Command="{Binding SaveProductCommand}"
                            ToolTipService.ShowOnDisabled="True">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource PanelButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLinkedToKompas}" Value="True">
                                        <Setter Property="ToolTip" Value="Сохранить текущее изделие"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsLinkedToKompas}" Value="False">
                                        <Setter Property="ToolTip" Value="Для сохранения необходима связь с КОМПАС"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💾" Margin="0,0,5,0"/>
                            <TextBlock Text="Сохранить"/>
                        </StackPanel>
                    </Button>

                    <Rectangle Width="1" Fill="{StaticResource BorderColor}" Margin="8,2"/>

                    <Button Command="{Binding CopyAllDataToClipboardCommand}"
                            Style="{StaticResource PanelButtonStyle}"
                            ToolTip="Копировать покупные детали, листовые и трубные материалы в Excel">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" Margin="0,0,5,0"/>
                            <TextBlock Text="Копировать всё в Excel"/>
                        </StackPanel>
                    </Button>

                    <Rectangle Width="1" Fill="{StaticResource BorderColor}" Margin="8,2"/>

                    <!-- Кнопка связи с КОМПАС / индикатор статуса -->
                    <Button Command="{Binding LinkToKompasCommand}"
                            Style="{StaticResource PanelButtonStyle}"
                            ToolTip="Установить связь с КОМПАС">
                        <Button.Visibility>
                            <Binding Path="IsLinkedToKompas">
                                <Binding.Converter>
                                    <local:InverseBooleanToVisibilityConverter/>
                                </Binding.Converter>
                            </Binding>
                        </Button.Visibility>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️" Margin="0,0,5,0" Foreground="#FFCC6600"/>
                            <TextBlock Text="Связать с КОМПАС" Foreground="#FFCC6600"/>
                        </StackPanel>
                    </Button>

                    <Border Visibility="{Binding IsLinkedToKompas, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Background="#2000AA00"
                            CornerRadius="4"
                            Padding="8,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔗" Margin="0,0,5,0"/>
                            <TextBlock Text="Связан с КОМПАС" Foreground="#FF008800" Margin="0,0,8,0"/>
                            <Button Command="{Binding RefreshFromKompasCommand}"
                                    Style="{StaticResource PanelButtonStyle}"
                                    ToolTip="Обновить данные из КОМПАС"
                                    Padding="4,2">
                                <TextBlock Text="🔄" FontSize="12"/>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <Button HorizontalAlignment="Right"
                        Command="{Binding CheckForUpdatesCommand}"
                        Style="{StaticResource PanelButtonStyle}"
                        ToolTip="Проверить наличие обновлений">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔄" Margin="0,0,5,0"/>
                        <TextBlock Text="Проверить обновления"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Информация об изделии -->
        <Border Grid.Row="1" 
                Padding="12,10"
                Margin="3,3,3,0"
                Background="{StaticResource AccentColor}"
                CornerRadius="4"
                Visibility="{Binding CurrentProduct.Name, Converter={StaticResource StringNotEmptyToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Background="#20FFFFFF" 
                        CornerRadius="4" 
                        Padding="8,6"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center">
                    <TextBlock Text="📦" FontSize="20"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentProduct.Name}" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="White"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding CurrentProduct.Marking}" 
                               FontSize="11" 
                               Foreground="#CCFFFFFF"
                               Margin="0,2,0,0"
                               Visibility="{Binding CurrentProduct.Marking, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>
                </StackPanel>

                <Border Grid.Column="2" 
                        Background="#20FFFFFF" 
                        CornerRadius="6" 
                        Padding="12,8"
                        VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="МАССА" 
                                   FontSize="9" 
                                   Foreground="#AAFFFFFF" 
                                   HorizontalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding CurrentProduct.Mass, StringFormat='{}{0:F2} кг'}" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Основной контент с выдвижной панелью поверх -->
        <Grid Grid.Row="2">
            <!-- Основной контент -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" MinWidth="250"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2.5*" MinWidth="250"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1.5*" MinWidth="200"/>
                </Grid.ColumnDefinitions>

                <!-- ЛЕВАЯ ПАНЕЛЬ: Список всех деталей -->
                <GroupBox Grid.Column="0">
                    <GroupBox.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Все детали" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <Button Grid.Column="1" 
                                    Content="📋 Excel" 
                                    Style="{StaticResource CopyButtonStyle}"
                                    Command="{Binding CopyAllToClipboardCommand}"
                                    ToolTip="Копировать в буфер обмена"/>
                        </Grid>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Поле поиска -->
                        <Border Grid.Row="0" 
                                Background="{StaticResource PrimaryBackground}" 
                                BorderBrush="{StaticResource BorderColor}" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Padding="8,5"
                                Margin="3,3,3,6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="🔍" 
                                           FontSize="12" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"
                                           Foreground="{StaticResource TextSecondary}"/>

                                <TextBox Grid.Column="1" 
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalAlignment="Center"
                                         FontSize="11"
                                         Foreground="{StaticResource TextPrimary}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Style.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                                <VisualBrush.Visual>
                                                                    <TextBlock Text="Поиск..." 
                                                                               Foreground="#FF9E9E9E" 
                                                                               FontSize="11"
                                                                               FontStyle="Italic"/>
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <Button Grid.Column="2" 
                                        Content="✕" 
                                        FontSize="10"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        ToolTip="Очистить"
                                        Padding="3,0"
                                        Margin="4,0,0,0"
                                        Foreground="{StaticResource TextSecondary}"
                                        Command="{Binding ClearSearchCommand}"
                                        Visibility="{Binding SearchText, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>
                            </Grid>
                        </Border>

                        <!-- Индикатор активного фильтра -->
                        <Border Grid.Row="1" 
                                Background="#FFF5F5F5" 
                                BorderBrush="{StaticResource BorderColor}" 
                                BorderThickness="1" 
                                CornerRadius="2" 
                                Padding="5,3"
                                Margin="3"
                                Visibility="{Binding SelectedMaterialFilter, Converter={StaticResource InverseNullToVisibilityConverter}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="Фильтр: " FontWeight="SemiBold" FontSize="11" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="{Binding SelectedMaterialFilter.Name}" FontSize="11" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>
                                <Button Grid.Column="1" 
                                        Content="✕" 
                                        FontSize="10"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        ToolTip="Сбросить фильтр"
                                        Click="ClearFilter_Click"
                                        Padding="3,0"
                                        Foreground="{StaticResource TextSecondary}"/>
                            </Grid>
                        </Border>

                        <ListBox Grid.Row="2" x:Name="Список_всех_деталей" 
                                 ItemsSource="{Binding DetailsView}"
                                 SelectedItem="{Binding SelectedDetail}"
                                 ItemTemplate="{StaticResource PartItemTemplate}"
                                 ItemContainerStyle="{StaticResource PartListBoxItemStyle}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 PreviewMouseDown="DetailsListBox_PreviewMouseDown">
                            <ListBox.GroupStyle>
                                <GroupStyle ContainerStyle="{StaticResource GroupedContainerStyle}"/>
                            </ListBox.GroupStyle>
                        </ListBox>
                    </Grid>
                </GroupBox>

                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent"/>

                <!-- ЦЕНТРАЛЬНАЯ ПАНЕЛЬ: Свойства выбранной детали -->
                <GroupBox Grid.Column="2" Header="Свойства детали">
                    <Grid>
                        <!-- Превью изделия когда ничего не выбрано -->
                        <Grid Visibility="{Binding DataContext.CurrentlySelectedPart, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource NullToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Выберите деталь из списка" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{StaticResource TextSecondary}"
                                       FontStyle="Italic"
                                       FontSize="11"
                                       Margin="15,15,15,10"
                                       Visibility="{Binding DataContext.CurrentProduct.FilePreview, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource NullToVisibilityConverter}}"/>

                            <!-- Превью файла изделия -->
                            <Border Grid.Row="1"
                                    BorderBrush="{StaticResource BorderColor}" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Padding="8" 
                                    Margin="15"
                                    VerticalAlignment="Top"
                                    Visibility="{Binding DataContext.CurrentProduct.FilePreview, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseNullToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" 
                                               Text="Превью изделия" 
                                               FontSize="12" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimary}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,8"/>

                                    <Image Grid.Row="1"
                                           Source="{Binding DataContext.CurrentProduct.FilePreview, RelativeSource={RelativeSource AncestorType=Window}}" 
                                           MaxHeight="400"
                                           Stretch="Uniform"
                                           StretchDirection="DownOnly"
                                           HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <Grid Visibility="{Binding DataContext.CurrentlySelectedPart, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseNullToVisibilityConverter}}"
                              DataContext="{Binding CurrentlySelectedPart}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Превью 3D модели -->
                            <Border Grid.Row="0" 
                                    BorderBrush="{StaticResource BorderColor}" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Padding="8" 
                                    Margin="3"
                                    Visibility="{Binding FilePreview, Converter={StaticResource InverseNullToVisibilityConverter}}">
                                <Image Source="{Binding FilePreview}" 
                                       MaxHeight="200"
                                       Stretch="Uniform"
                                       StretchDirection="DownOnly"
                                       HorizontalAlignment="Center"/>
                            </Border>

                            <!-- Свойства детали -->
                            <Border Grid.Row="1" 
                                    BorderBrush="{StaticResource BorderColor}" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Padding="8" 
                                    Margin="3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" Style="{StaticResource PropertyLabel}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}" Style="{StaticResource PropertyValue}"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Обозначение:" Style="{StaticResource PropertyLabel}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Marking}" Style="{StaticResource PropertyValue}"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Тип детали:" Style="{StaticResource PropertyLabel}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DetailType}" Style="{StaticResource PropertyValue}"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Тип продукта:" Style="{StaticResource PropertyLabel}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ProductType}" Style="{StaticResource PropertyValue}"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Материал:" Style="{StaticResource PropertyLabel}"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Material}" Style="{StaticResource PropertyValue}"/>

                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Масса:" Style="{StaticResource PropertyLabel}"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Mass, StringFormat='{}{0:F3} кг'}" Style="{StaticResource PropertyValue}"/>
                                </Grid>
                            </Border>

                            <!-- Кнопка показать в КОМПАС -->
                            <Button Grid.Row="2"
                                    Content="Показать в КОМПАС" 
                                    Command="{Binding DataContext.ShowInKompasCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    Margin="3,3,3,6"
                                    Padding="12,6"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Background="{StaticResource AccentColor}"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Превью чертежа (занимает оставшееся пространство) -->
                            <Border Grid.Row="3"
                                    BorderBrush="{StaticResource BorderColor}" 
                                    BorderThickness="1" 
                                    CornerRadius="3"
                                    Padding="8"
                                    Margin="3"
                                    Visibility="{Binding DrawingPreview, Converter={StaticResource InverseNullToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                                        <TextBlock Text="Чертёж детали" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text=" (клик для увеличения)" 
                                                   FontSize="10" 
                                                   Foreground="{StaticResource TextSecondary}"
                                                   VerticalAlignment="Center"
                                                   FontStyle="Italic"/>
                                    </StackPanel>

                                    <Border Grid.Row="1" 
                                            Background="Transparent"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="DrawingPreview_MouseLeftButtonDown">
                                        <Image Source="{Binding DrawingPreview}" 
                                               Stretch="Uniform"
                                               StretchDirection="DownOnly"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </GroupBox>

                <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent"/>

                <!-- ПРАВАЯ ПАНЕЛЬ: Листовой прокат, Трубный прокат, Стандартные изделия -->
                <Grid Grid.Column="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Листовой прокат -->
                    <GroupBox Grid.Row="0" Grid.Column="0" Margin="3">
                        <GroupBox.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📄" Margin="0,0,5,0"/>
                                    <TextBlock Text="Листовой" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                </StackPanel>
                                <ComboBox Grid.Column="1"
                                          SelectedValue="{Binding SheetMaterialsSortType, Mode=TwoWay}"
                                          Style="{StaticResource SortComboBoxStyle}"
                                          Width="110"
                                          Margin="4,0"
                                          ToolTip="Выберите тип сортировки">
                                    <models:MaterialSortType>ByName</models:MaterialSortType>
                                    <models:MaterialSortType>ByMass</models:MaterialSortType>
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource MaterialSortTypeConverter}}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <Button Grid.Column="2" 
                                        Content="📋" 
                                        Style="{StaticResource CopyButtonStyle}"
                                        Command="{Binding CopySheetToClipboardCommand}"
                                        ToolTip="Копировать в Excel"/>
                            </Grid>
                        </GroupBox.Header>
                        <ListBox ItemsSource="{Binding SheetMaterialsView}"
                                 SelectedItem="{Binding SelectedSheetMaterial}"
                                 SelectionMode="Single"
                                 PreviewMouseDown="SheetMaterialsListBox_PreviewMouseDown"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="1" Cursor="Hand">
                                        <TextBlock Text="{Binding Name}" FontSize="11" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding TotalMass, StringFormat='{}{0:F2} кг'}" FontSize="10" Margin="0,2,0,0" Opacity="0.7"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialListBoxItemStyle}"/>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </GroupBox>

                    <!-- Трубный прокат -->
                    <GroupBox Grid.Row="0" Grid.Column="1" Margin="3">
                        <GroupBox.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔩" Margin="0,0,5,0"/>
                                    <TextBlock Text="Трубный" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                </StackPanel>
                                <ComboBox Grid.Column="1"
                                          SelectedValue="{Binding TubularProductsSortType, Mode=TwoWay}"
                                          Style="{StaticResource SortComboBoxStyle}"
                                          Width="110"
                                          Margin="4,0"
                                          ToolTip="Выберите тип сортировки">
                                    <models:MaterialSortType>ByLength</models:MaterialSortType>
                                    <models:MaterialSortType>ByMass</models:MaterialSortType>
                                    <models:MaterialSortType>ByName</models:MaterialSortType>
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource MaterialSortTypeConverter}}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <Button Grid.Column="2" 
                                        Content="📋" 
                                        Style="{StaticResource CopyButtonStyle}"
                                        Command="{Binding CopyTubularProductsToClipboardCommand}"
                                        ToolTip="Копировать в Excel"/>
                            </Grid>
                        </GroupBox.Header>
                        <ListBox ItemsSource="{Binding TubularProductsView}"
                                 SelectedItem="{Binding SelectedTubularProduct}"
                                 SelectionMode="Single"
                                 PreviewMouseDown="TubularProductsListBox_PreviewMouseDown"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="1" Cursor="Hand">
                                        <TextBlock Text="{Binding Name}" FontSize="11" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding TotalLength, StringFormat='{}{0:F2} мм'}" FontSize="10" Margin="0,2,0,0" Opacity="0.7"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialListBoxItemStyle}"/>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </GroupBox>

                    <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.ColumnSpan="2" Background="Transparent"/>

                    <!-- Прочие материалы -->
                    <GroupBox Grid.Row="2" Grid.Column="0" Margin="3">
                        <GroupBox.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔩" Margin="0,0,5,0"/>
                                    <TextBlock Text="Прочие" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                </StackPanel>
                                 <ComboBox Grid.Column="1"
                                          SelectedValue="{Binding OtherMaterialsSortType, Mode=TwoWay}"
                                          Style="{StaticResource SortComboBoxStyle}"
                                          Width="110"
                                          Margin="4,0"
                                          ToolTip="Выберите тип сортировки">
                                    <models:MaterialSortType>ByName</models:MaterialSortType>
                                    <models:MaterialSortType>ByMass</models:MaterialSortType>
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource MaterialSortTypeConverter}}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <Button Grid.Column="2" 
                                        Content="📋" 
                                        Style="{StaticResource CopyButtonStyle}"
                                        Command="{Binding CopyOtherMaterialsToClipboardCommand}"
                                        ToolTip="Копировать в Excel"/>
                            </Grid>
                        </GroupBox.Header>
                        <ListBox ItemsSource="{Binding OtherMaterialsView}"
                                 SelectedItem="{Binding SelectedTubularProduct}"
                                 SelectionMode="Single"
                                 PreviewMouseDown="TubularProductsListBox_PreviewMouseDown"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="1" Cursor="Hand">
                                        <TextBlock Text="{Binding Name}" FontSize="11" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding TotalMass, StringFormat='{}{0:F2} кг'}" FontSize="10" Margin="0,2,0,0" Opacity="0.7"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialListBoxItemStyle}"/>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </GroupBox>

                    <!-- Стандартные изделия -->
                    <GroupBox Grid.Row="2" Grid.Column="1" Margin="3">
                        <GroupBox.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🛒" Margin="0,0,5,0"/>
                                    <TextBlock Text="Покупные" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                </StackPanel>
                                <Button Grid.Column="1" 
                                        Content="📋" 
                                        Style="{StaticResource CopyButtonStyle}"
                                        Command="{Binding CopyStandartPartsToClipboardCommand}"
                                        ToolTip="Копировать в Excel"/>
                            </Grid>
                        </GroupBox.Header>
                        <ListBox ItemsSource="{Binding StandardPartsView}"
                                 SelectedItem="{Binding SelectedStandardPart}"
                                 ItemTemplate="{StaticResource PartItemTemplate}"
                                 ItemContainerStyle="{StaticResource PartListBoxItemStyle}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 PreviewMouseDown="StandardPartsListBox_PreviewMouseDown">
                            <ListBox.GroupStyle>
                                <GroupStyle ContainerStyle="{StaticResource GroupedContainerStyle}"/>
                            </ListBox.GroupStyle>
                        </ListBox>
                    </GroupBox>
                </Grid>

                <!-- Индикатор загрузки -->
                <Grid Grid.ColumnSpan="5" 
                      Background="#80000000" 
                      Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
                        <TextBlock Text="Загрузка..." Foreground="White" Margin="0,10,0,0" FontSize="11"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Затемнение фона при открытой панели -->
            <Border Background="#40000000"
                    Visibility="{Binding IsProductsPanelOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
                    MouseDown="OverlayBackground_MouseDown"/>

            <!-- Выдвижная панель продуктов (overlay) -->
            <Border Background="{StaticResource PrimaryBackground}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="0,0,1,0"
                    HorizontalAlignment="Left"
                    Width="300"
                    Visibility="{Binding IsProductsPanelOpen, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3" Direction="0" Opacity="0.2" BlurRadius="10"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок панели -->
                    <Border Grid.Row="0" Background="{StaticResource AccentColor}" Padding="12,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Сохранённые изделия" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>

                            <Button Grid.Column="1" 
                                    Content="✕"
                                    Command="{Binding ToggleProductsPanelCommand}"
                                    FontSize="14"
                                    Foreground="White"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Padding="5,0"
                                    VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Кнопка удаления -->
                    <StackPanel Grid.Row="1" Margin="8,8,8,0">
                        <Separator Margin="0,4" Background="{StaticResource BorderColor}"/>
                        
                        <!-- Настройка серверной папки -->
                        <TextBlock Text="Серверная папка:" 
                                   FontSize="11" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,4,0,4"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" 
                                    Background="{StaticResource HoverBackground}" 
                                    CornerRadius="3" 
                                    Padding="6,4"
                                    ToolTip="{Binding ServerStorageFolder}">
                                <TextBlock Text="{Binding ServerStorageFolderDisplay}" 
                                           FontSize="10" 
                                           Foreground="{StaticResource TextSecondary}"
                                           TextTrimming="CharacterEllipsis"/>
                            </Border>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="4,0,0,0">
                                <Button Command="{Binding SelectServerStorageFolderCommand}"
                                        ToolTip="Выбрать серверную папку"
                                        Style="{StaticResource CopyButtonStyle}"
                                        Padding="6,4"
                                        Margin="0,0,2,0">
                                    <TextBlock Text="📁" FontSize="12"/>
                                </Button>
                                <Button Command="{Binding ClearServerStorageFolderCommand}"
                                        ToolTip="Очистить"
                                        Style="{StaticResource CopyButtonStyle}"
                                        Padding="6,4"
                                        Visibility="{Binding HasServerStorageFolder, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="✕" FontSize="10"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Кнопка синхронизации -->
                        <Button Command="{Binding SyncFromServerCommand}"
                                Style="{StaticResource PanelButtonStyle}"
                                Margin="0,8,0,0"
                                Visibility="{Binding HasServerStorageFolder, Converter={StaticResource BooleanToVisibilityConverter}}"
                                ToolTip="Двусторонняя синхронизация: обновляет изделия в обе стороны (локально ↔ сервер)">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔄" Margin="0,0,8,0" FontSize="14"/>
                                <TextBlock FontSize="12">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Синхронизировать с сервером"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsServerAvailable}" Value="False">
                                                    <Setter Property="Text" Value="Сервер недоступен"/>
                                                    <Setter Property="Foreground" Value="#FF9E9E9E"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button>
                        
                        <!-- Индикатор состояния сервера -->
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0"
                                    Visibility="{Binding HasServerStorageFolder, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Ellipse Width="8" Height="8" Margin="0,0,6,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#4CAF50"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsServerAvailable}" Value="False">
                                                <Setter Property="Fill" Value="#F44336"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock FontSize="10" Foreground="{StaticResource TextSecondary}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Сервер доступен"/>
                                        <Setter Property="Foreground" Value="#FF008800"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsServerAvailable}" Value="False">
                                                <Setter Property="Text" Value="Сервер недоступен"/>
                                                <Setter Property="Foreground" Value="#FF9E9E9E"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                        
                        <Separator Margin="0,8,0,4" Background="{StaticResource BorderColor}"/>
                    </StackPanel>

                    <!-- Список сохранённых продуктов -->
                    <ListBox Grid.Row="2"
                             ItemsSource="{Binding SavedProducts}"
                             SelectedItem="{Binding SelectedSavedProduct}"
                             Background="Transparent"
                             BorderThickness="0"
                             Margin="0,0,0,0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd"
                                                    Background="{TemplateBinding Background}" 
                                                    Padding="{TemplateBinding Padding}"
                                                    BorderBrush="{StaticResource BorderColor}"
                                                    BorderThickness="0,0,0,1">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="{StaticResource HoverBackground}"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="{StaticResource SelectedBackground}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.InputBindings>
                                        <MouseBinding MouseAction="LeftDoubleClick" 
                                                      Command="{Binding DataContext.SwitchToProductCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding}"/>
                                    </Grid.InputBindings>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding ProductName}" 
                                                   FontWeight="SemiBold"
                                                   FontSize="12"
                                                   TextWrapping="Wrap">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Marking}" 
                                                                   FontSize="10"
                                                                   Margin="0,2,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                            <Setter Property="Foreground" Value="#CCFFFFFF"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <StackPanel Orientation="Horizontal" 
                                                    Margin="0,6,0,0">
                                            <Border Background="{StaticResource HoverBackground}" 
                                                    CornerRadius="3" 
                                                    Padding="6,2"
                                                    Margin="0,0,8,0">
                                                <TextBlock Text="{Binding DetailsCount, StringFormat='{}{0} дет.'}" 
                                                           FontSize="10" 
                                                           Foreground="{StaticResource TextSecondary}"/>
                                            </Border>
                                            <TextBlock Text="{Binding SavedDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                                                       FontSize="9" 
                                                       Foreground="{StaticResource TextSecondary}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <Button Grid.Column="1"
                                            PreviewMouseDown="DeleteProduct_PreviewMouseDown"
                                            MouseEnter="DeleteButton_MouseEnter"
                                            MouseLeave="DeleteButton_MouseLeave"
                                            Panel.ZIndex="1"
                                            DataContext="{Binding}"
                                            ToolTip="Удалить изделие"
                                            VerticalAlignment="Center"
                                            Margin="8,0,0,0"
                                            Padding="8,4"
                                            Background="{StaticResource PrimaryBackground}"
                                            BorderThickness="1"
                                            BorderBrush="{StaticResource BorderColor}"
                                            Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="3"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <TextBlock Text="🗑️" FontSize="14" IsHitTestVisible="False"/>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <!-- Всплывающая панель выбора загрузки -->
        <Popup x:Name="LoadOptionsPopup" 
               PlacementTarget="{Binding ElementName=LoadDocumentButton}"
               Placement="Bottom"
               StaysOpen="False"
               AllowsTransparency="True">
            <Border Background="{StaticResource PrimaryBackground}" 
                    BorderBrush="{StaticResource BorderColor}" 
                    BorderThickness="1" 
                    CornerRadius="4"
                    Padding="5">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel>
                    <Button Content="📂 Загрузить из активного КОМПАС" 
                            Click="LoadFromKompas_Click"
                            Style="{StaticResource PanelButtonStyle}"
                            FontSize="12"/>
                    <Separator Margin="5,2" Background="{StaticResource BorderColor}"/>
                    <Button Content="📁 Выбрать файл..." 
                            Click="SelectFile_Click"
                            Style="{StaticResource PanelButtonStyle}"
                            FontSize="12"/>
                </StackPanel>
            </Border>
        </Popup>

        <!-- Статус-бар -->
        <Border Grid.Row="3" Background="{StaticResource PrimaryBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="8,4">
            <TextBlock Text="{Binding StatusMessage}" FontSize="11" Foreground="{StaticResource TextSecondary}"/>
        </Border>

        <!-- SnackBar уведомление -->
        <Border x:Name="SnackbarNotification"
                Grid.Row="0" Grid.RowSpan="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,20"
                Background="#FF4CAF50"
                CornerRadius="6"
                Padding="20,12"
                Visibility="{Binding IsSnackbarVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                RenderTransformOrigin="0.5,1">
            <Border.RenderTransform>
                <TranslateTransform Y="100"/>
            </Border.RenderTransform>
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Opacity="0.4" BlurRadius="10"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="✓" 
                          FontSize="18" 
                          FontWeight="Bold"
                          Foreground="White"
                          Margin="0,0,12,0"
                          VerticalAlignment="Center"/>
                <TextBlock Text="{Binding SnackbarMessage}" 
                          FontSize="13" 
                          FontWeight="SemiBold"
                          Foreground="White"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>