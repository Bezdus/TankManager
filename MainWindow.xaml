<Window x:Class="TankManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TankManager"
        mc:Ignorable="d"
        Title="Tank Manager" Height="600" Width="1200"
        AllowDrop="True"
        Drop="FileDropZone_Drop"
        DragEnter="FileDropZone_DragEnter">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:GroupCountToVisibilityConverter x:Key="GroupCountToVisibilityConverter"/>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="PropertyLabel">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,3,8,3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="PropertyValue">
            <Setter Property="Margin" Value="0,3,0,3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="250"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*" MinWidth="250"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1.5*" MinWidth="200"/>
            </Grid.ColumnDefinitions>

            <!-- ЛЕВАЯ ПАНЕЛЬ: Список всех деталей -->
            <GroupBox Grid.Column="0" Header="Все детали">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Поле поиска -->
                    <Border Grid.Row="0" 
                            Background="White" 
                            BorderBrush="#FFB0BEC5" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Padding="8,5"
                            Margin="3,3,3,6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Иконка поиска -->
                            <TextBlock Grid.Column="0" 
                                       Text="🔍" 
                                       FontSize="12" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,6,0"
                                       Foreground="#FF757575"/>
                            
                            <!-- Текстовое поле поиска -->
                            <TextBox Grid.Column="1" 
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalAlignment="Center"
                                     FontSize="11">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Left">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="Поиск по названию или обозначению..." 
                                                                           Foreground="#FF9E9E9E" 
                                                                           FontSize="11"
                                                                           FontStyle="Italic"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            
                            <!-- Кнопка очистки поиска -->
                            <Button Grid.Column="2" 
                                    Content="✕" 
                                    FontSize="10"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    ToolTip="Очистить поиск"
                                    Padding="3,0"
                                    Margin="4,0,0,0"
                                    Command="{Binding ClearSearchCommand}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SearchText, Converter={x:Null}}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Индикатор активного фильтра -->
                    <Border Grid.Row="1" 
                            Background="#FFFEF9C3" 
                            BorderBrush="#FFD97706" 
                            BorderThickness="1" 
                            CornerRadius="2" 
                            Padding="5,3"
                            Margin="3">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedMaterial, Converter={x:Null}}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="Фильтр: " FontWeight="SemiBold" FontSize="11" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding SelectedMaterial.Name}" FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button Grid.Column="1" 
                                    Content="✕" 
                                    FontSize="10"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    ToolTip="Сбросить фильтр"
                                    Click="ClearFilter_Click"
                                    Padding="3,0"/>
                        </Grid>
                    </Border>

                    <ListBox Grid.Row="2" x:Name="Список_всех_деталей" 
                             ItemsSource="{Binding DetailsView}"
                             SelectedItem="{Binding SelectedDetail}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.ContainerStyle>
                                    <Style TargetType="{x:Type GroupItem}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type GroupItem}">
                                                    <Border Background="White"
                                                            BorderBrush="#FFD0D0D0" 
                                                            BorderThickness="1" 
                                                            CornerRadius="3"
                                                            Margin="4,3"
                                                            Padding="8,6">
                                                        <Grid>
                                                            <!-- Для групп с количеством > 1: Expander -->
                                                            <Expander IsExpanded="False"
                                                                      Visibility="{Binding ItemCount, Converter={StaticResource GroupCountToVisibilityConverter}, ConverterParameter=Multiple}">
                                                                <Expander.Header>
                                                                    <Grid Background="Transparent">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>

                                                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                                            <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#FF0D47A1" TextWrapping="Wrap">
                                                                                <Run Text="{Binding Items[0].Name, Mode=OneWay}"/>
                                                                                <Run Text=" "/>
                                                                                <Run Text="{Binding Items[0].Marking, Mode=OneWay}" Foreground="#FF616161"/>
                                                                            </TextBlock>
                                                                            <TextBlock FontSize="10" 
                                                                                       Foreground="#FF616161"
                                                                                       Margin="0,2,0,0">
                                                                                <Run Text="{Binding Items[0].DetailType}"/>
                                                                                <Run Text=" • "/>
                                                                                <Run Text="{Binding Items[0].Material}"/>
                                                                            </TextBlock>
                                                                        </StackPanel>

                                                                        <Border Grid.Column="1" 
                                                                                Background="#FF1976D2" 
                                                                                CornerRadius="8" 
                                                                                Padding="5,2"
                                                                                VerticalAlignment="Center">
                                                                            <TextBlock Text="{Binding ItemCount, StringFormat='{}{0} шт.'}" 
                                                                                       FontSize="10" 
                                                                                       FontWeight="SemiBold"
                                                                                       Foreground="White"/>
                                                                        </Border>
                                                                    </Grid>
                                                                </Expander.Header>
                                                                <Border Padding="0,4,0,0" Margin="12,0,0,0">
                                                                    <ItemsPresenter/>
                                                                </Border>
                                                            </Expander>

                                                            <!-- Для групп с количеством = 1: только содержимое, БЕЗ Expander -->
                                                            <ItemsPresenter Visibility="{Binding ItemCount, Converter={StaticResource GroupCountToVisibilityConverter}, ConverterParameter=Single}"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </GroupStyle.ContainerStyle>
                            </GroupStyle>
                        </ListBox.GroupStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="1" Cursor="Hand">
                                    <TextBlock FontSize="11" FontWeight="SemiBold">
                                        <Run Text="{Binding Name, Mode=OneWay}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding Marking, Mode=OneWay}" Foreground="#FF616161"/>
                                    </TextBlock>
                                    <TextBlock FontSize="10" 
                                               Foreground="#FF616161"
                                               Margin="0,2,0,0">
                                        <Run Text="{Binding DetailType}"/>
                                        <Run Text=" • "/>
                                        <Run Text="{Binding Material}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="4,2"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE3F2FD"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF2196F3"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <!-- ЦЕНТРАЛЬНАЯ ПАНЕЛЬ: Свойства выбранной детали -->
            <GroupBox Grid.Column="2" Header="Свойства детали">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel DataContext="{Binding CurrentlySelectedPart}">
                        <TextBlock Text="Выберите деталь из списка" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Foreground="Gray"
                                   FontStyle="Italic"
                                   FontSize="11"
                                   Margin="15"
                                   Visibility="{Binding Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" Padding="8" Margin="3">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel>
                                <!-- Превью файла -->
                                <Image Source="{Binding FilePreview}" 
                                       Width="500" Height="500" 
                                       Stretch="Uniform"
                                       StretchDirection="DownOnly"
                                       Margin="0,0,0,8"
                                       HorizontalAlignment="Center">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding FilePreview}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>

                                <!-- Свойства детали -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" Style="{StaticResource PropertyLabel}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}" Style="{StaticResource PropertyValue}"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Обозначение:" Style="{StaticResource PropertyLabel}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Marking}" Style="{StaticResource PropertyValue}"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Тип детали:" Style="{StaticResource PropertyLabel}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DetailType}" Style="{StaticResource PropertyValue}"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Материал:" Style="{StaticResource PropertyLabel}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Material}" Style="{StaticResource PropertyValue}"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Масса:" Style="{StaticResource PropertyLabel}"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Mass}" Style="{StaticResource PropertyValue}"/>
                                </Grid>

                                <!-- Кнопка для показа детали в КОМПАС -->
                                <Button Content="Показать в КОМПАС" 
                                        Command="{Binding DataContext.ShowInKompasCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        Margin="0,12,0,0"
                                        Padding="12,6"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Background="#FF2196F3"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="4"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF1976D2"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#FF0D47A1"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Background" Value="#FFB0BEC5"/>
                                                    <Setter Property="Cursor" Value="Arrow"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>

            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <!-- ПРАВАЯ ПАНЕЛЬ: Материалы и стандартные детали -->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Материалы -->
                <GroupBox Grid.Row="0">
                    <GroupBox.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Материалы (клик для фильтра)" 
                                       VerticalAlignment="Center"/>
                            <Button Grid.Column="1" 
                                    Content="{Binding MaterialSortText}"
                                    Command="{Binding ToggleMaterialSortCommand}"
                                    FontSize="9"
                                    Padding="6,2"
                                    Margin="5,0,0,0"
                                    Background="#FFE3F2FD"
                                    BorderBrush="#FF2196F3"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    ToolTip="Переключить режим сортировки">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="3"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF2196F3"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </GroupBox.Header>
                    <ListBox x:Name="MaterialsListBox"
                             ItemsSource="{Binding MaterialsView}"
                             SelectedItem="{Binding SelectedMaterial}"
                             SelectionMode="Single"
                             PreviewMouseDown="MaterialsListBox_PreviewMouseDown">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="1" Cursor="Hand">
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding TotalMass, StringFormat='{}{0:F2} кг'}" 
                                               FontSize="10" 
                                               Foreground="#FF616161"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="4,2"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE3F2FD"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF2196F3"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </GroupBox>

                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

                <!-- Стандартные детали -->
                <GroupBox Grid.Row="2" Header="Стандартные изделия">
                    <ListBox ItemsSource="{Binding StandardPartsView}"
                             SelectedItem="{Binding SelectedStandardPart}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.ContainerStyle>
                                    <Style TargetType="{x:Type GroupItem}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type GroupItem}">
                                                    <Border Background="White"
                                                            BorderBrush="#FFD0D0D0" 
                                                            BorderThickness="1" 
                                                            CornerRadius="3"
                                                            Margin="4,3"
                                                            Padding="8,6">
                                                        <Grid>
                                                            <!-- Для групп с количеством > 1: Expander -->
                                                            <Expander IsExpanded="False"
                                                                      Visibility="{Binding ItemCount, Converter={StaticResource GroupCountToVisibilityConverter}, ConverterParameter=Multiple}">
                                                                <Expander.Header>
                                                                    <Grid Background="Transparent">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>

                                                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                                            <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#FF0D47A1" TextWrapping="Wrap">
                                                                                <Run Text="{Binding Items[0].Name, Mode=OneWay}"/>
                                                                                <Run Text=" "/>
                                                                                <Run Text="{Binding Items[0].Marking, Mode=OneWay}" Foreground="#FF616161"/>
                                                                            </TextBlock>
                                                                            <TextBlock FontSize="10" 
                                                                                       Foreground="#FF616161"
                                                                                       Margin="0,2,0,0">
                                                                                <Run Text="{Binding Items[0].DetailType}"/>
                                                                                <Run Text=" • "/>
                                                                                <Run Text="{Binding Items[0].Material}"/>
                                                                            </TextBlock>
                                                                        </StackPanel>

                                                                        <Border Grid.Column="1" 
                                                                                Background="#FF1976D2" 
                                                                                CornerRadius="8" 
                                                                                Padding="5,2"
                                                                                VerticalAlignment="Center">
                                                                            <TextBlock Text="{Binding ItemCount, StringFormat='{}{0} шт.'}" 
                                                                                       FontSize="10" 
                                                                                       FontWeight="SemiBold"
                                                                                       Foreground="White"/>
                                                                        </Border>
                                                                    </Grid>
                                                                </Expander.Header>
                                                                <Border Padding="0,4,0,0" Margin="12,0,0,0">
                                                                    <ItemsPresenter/>
                                                                </Border>
                                                            </Expander>

                                                            <!-- Для групп с количеством = 1: только содержимое, БЕЗ Expander -->
                                                            <ItemsPresenter Visibility="{Binding ItemCount, Converter={StaticResource GroupCountToVisibilityConverter}, ConverterParameter=Single}"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </GroupStyle.ContainerStyle>
                            </GroupStyle>
                        </ListBox.GroupStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="1" Cursor="Hand">
                                    <TextBlock FontSize="11" FontWeight="SemiBold">
                                        <Run Text="{Binding Name, Mode=OneWay}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding Marking, Mode=OneWay}" Foreground="#FF616161"/>
                                    </TextBlock>
                                    <TextBlock FontSize="10" 
                                               Foreground="#FF616161"
                                               Margin="0,2,0,0">
                                        <Run Text="{Binding DetailType}"/>
                                        <Run Text=" • "/>
                                        <Run Text="{Binding Material}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="4,2"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE3F2FD"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF2196F3"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </GroupBox>
            </Grid>

            <!-- Индикатор загрузки -->
            <Grid Grid.ColumnSpan="5" 
                  Background="#80000000" 
                  Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
                    <TextBlock Text="Загрузка..." Foreground="White" Margin="0,10,0,0" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Статус-бар -->
        <StatusBar Grid.Row="1">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" FontSize="11"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>