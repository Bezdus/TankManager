<Window x:Class="TankManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TankManager"
        mc:Ignorable="d"
        Title="Tank Manager" Height="600" Width="1200"
        AllowDrop="True"
        Drop="FileDropZone_Drop"
        DragEnter="FileDropZone_DragEnter">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="PropertyLabel">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,5,10,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="PropertyValue">
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="250"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*" MinWidth="250"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1.5*" MinWidth="200"/>
            </Grid.ColumnDefinitions>
            
            <!-- ЛЕВАЯ ПАНЕЛЬ: Список всех деталей -->
            <GroupBox Grid.Column="0" Header="Все детали">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Индикатор активного фильтра -->
                    <Border Grid.Row="0" 
                            Background="#FFFFEB3B" 
                            BorderBrush="#FFD32F2F" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Padding="8,5"
                            Margin="5">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedMaterial, Converter={x:Null}}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="📋 Фильтр: " FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding SelectedMaterial}" VerticalAlignment="Center" FontStyle="Italic"/>
                            </StackPanel>
                            <Button Grid.Column="1" 
                                    Content="✕" 
                                    FontWeight="Bold"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    ToolTip="Сбросить фильтр"
                                    Click="ClearFilter_Click"
                                    Padding="5,0"/>
                        </Grid>
                    </Border>
                    
                    <ListBox Grid.Row="1" x:Name="Список_всех_деталей" 
                             ItemsSource="{Binding DetailsView}"
                             SelectedItem="{Binding SelectedDetail}">
                        <ListBox.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.ContainerStyle>
                                    <Style TargetType="{x:Type GroupItem}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type GroupItem}">
                                                    <Expander IsExpanded="True" BorderBrush="LightGray" BorderThickness="0,0,0,1" Margin="0,2">
                                                        <Expander.Header>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="12" Margin="0,0,10,0"/>
                                                                <TextBlock Text="{Binding ItemCount, StringFormat='({0} шт.)'}" FontSize="11" Foreground="Gray" VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                        </Expander.Header>
                                                        <ItemsPresenter Margin="20,5,0,5"/>
                                                    </Expander>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </GroupStyle.ContainerStyle>
                            </GroupStyle>
                        </ListBox.GroupStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,2">
                                    <TextBlock Text="{Binding Marking}" FontSize="11"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="Тип: " FontSize="9" Foreground="Gray"/>
                                        <TextBlock Text="{Binding DetailType}" FontSize="9" Foreground="Gray" Margin="0,0,10,0"/>
                                        <TextBlock Text="Материал: " FontSize="9" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Material}" FontSize="9" Foreground="Gray"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </GroupBox>
            
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
            
            <!-- ЦЕНТРАЛЬНАЯ ПАНЕЛЬ: Свойства выбранной детали -->
            <GroupBox Grid.Column="2" Header="Свойства детали">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel DataContext="{Binding SelectedDetail}">
                        <TextBlock Text="Выберите деталь из списка" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Foreground="Gray"
                                   FontStyle="Italic"
                                   Margin="20"
                                   Visibility="{Binding Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel>
                                <!-- Превью файла -->
                                <Image Source="{Binding FilePreview}" 
                                       Width="150" Height="150" 
                                       Stretch="Uniform"
                                       StretchDirection="DownOnly"
                                       Margin="0,0,0,10"
                                       HorizontalAlignment="Center">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding FilePreview}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                
                                <!-- Свойства детали -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" Style="{StaticResource PropertyLabel}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}" Style="{StaticResource PropertyValue}"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Обозначение:" Style="{StaticResource PropertyLabel}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Marking}" Style="{StaticResource PropertyValue}"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Тип детали:" Style="{StaticResource PropertyLabel}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DetailType}" Style="{StaticResource PropertyValue}"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Материал:" Style="{StaticResource PropertyLabel}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Material}" Style="{StaticResource PropertyValue}"/>
                                    
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Масса:" Style="{StaticResource PropertyLabel}"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Mass}" Style="{StaticResource PropertyValue}"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
            
            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
            
            <!-- ПРАВАЯ ПАНЕЛЬ: Материалы и стандартные детали -->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Материалы -->
                <GroupBox Grid.Row="0" Header="Материалы (клик для фильтра)">
                    <ListBox x:Name="MaterialsListBox"
                             ItemsSource="{Binding Materials}"
                             SelectedItem="{Binding SelectedMaterial}"
                             SelectionMode="Single"
                             PreviewMouseDown="MaterialsListBox_PreviewMouseDown">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="2" Cursor="Hand"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="5,3"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE3F2FD"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF2196F3"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </GroupBox>
                
                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                
                <!-- Стандартные детали -->
                <GroupBox Grid.Row="2" Header="Стандартные изделия">
                    <ListBox ItemsSource="{Binding StandardParts}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,2">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="11"/>
                                    <TextBlock Text="{Binding Marking}" FontSize="10" Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
            </Grid>
            
            <!-- Индикатор загрузки -->
            <Grid Grid.ColumnSpan="5" 
                  Background="#80000000" 
                  Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
                    <TextBlock Text="Загрузка..." Foreground="White" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
        
        <!-- Статус-бар -->
        <StatusBar Grid.Row="1">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
