<Window x:Class="TankManager.Views.LoadingScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Tank Manager - Загрузка документа" 
        Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowDrop="True"
        Drop="Window_Drop"
        DragEnter="Window_DragEnter"
        DragLeave="Window_DragLeave"
        Background="#FFF5F5F5">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FF2196F3" Padding="15">
            <StackPanel>
                <TextBlock Text="Tank Manager" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Выберите способ загрузки документа КОМПАС" 
                           FontSize="13" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="40,25,40,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="18"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Кнопка 1: Загрузить из активного документа КОМПАС -->
            <Border Grid.Row="0" 
                    Background="White"
                    BorderBrush="#FFD0D0D0" 
                    BorderThickness="2" 
                    CornerRadius="8"
                    Cursor="Hand"
                    MouseLeftButtonDown="LoadFromKompas_Click">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#FF2196F3"/>
                                <Setter Property="Background" Value="#FFF0F7FF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel VerticalAlignment="Center" Margin="15,12">
                    <TextBlock Text="📂" 
                               FontSize="36" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Загрузить из активного КОМПАС" 
                               FontSize="15" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               LineHeight="18"/>
                    <TextBlock Text="Загрузить открытый документ из КОМПАС-3D" 
                               FontSize="11" 
                               Foreground="#FF616161"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               LineHeight="14"/>
                </StackPanel>
            </Border>

            <!-- Разделитель -->
            <TextBlock Grid.Row="1" 
                       Text="или" 
                       FontSize="11" 
                       Foreground="#FF9E9E9E"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <!-- Кнопка 2: Выбрать файл -->
            <Border Grid.Row="2" 
                    Background="White"
                    BorderBrush="#FFD0D0D0" 
                    BorderThickness="2" 
                    CornerRadius="8"
                    Cursor="Hand"
                    MouseLeftButtonDown="SelectFile_Click">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#FF2196F3"/>
                                <Setter Property="Background" Value="#FFF0F7FF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel VerticalAlignment="Center" Margin="15,12">
                    <TextBlock Text="📁" 
                               FontSize="36" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Выбрать файл" 
                               FontSize="15" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               LineHeight="18"/>
                    <TextBlock Text="Открыть файл .a3d с компьютера" 
                               FontSize="11" 
                               Foreground="#FF616161"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"
                               LineHeight="14"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Оверлей для drag-and-drop на всё окно -->
        <Border x:Name="DragDropOverlay"
                Grid.RowSpan="3"
                Background="#E02196F3"
                BorderBrush="#FF2196F3"
                BorderThickness="4"
                CornerRadius="0"
                Visibility="Collapsed"
                IsHitTestVisible="False">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="⬇️" 
                           FontSize="60" 
                           HorizontalAlignment="Center"
                           Foreground="White"
                           Margin="0,0,0,15"/>
                <TextBlock Text="Отпустите файл для загрузки" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Файлы КОМПАС (.a3d)" 
                           FontSize="16" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Статус-бар -->
        <StatusBar Grid.Row="2" Background="#FFF5F5F5">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" 
                           Text="Выберите способ загрузки или перетащите файл .a3d в окно" 
                           FontSize="11"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Индикатор загрузки -->
        <Grid x:Name="LoadingOverlay" 
              Grid.RowSpan="3"
              Background="#80000000" 
              Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
                <TextBlock Text="Загрузка документа..." 
                           Foreground="White" 
                           Margin="0,10,0,0" 
                           FontSize="14"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>